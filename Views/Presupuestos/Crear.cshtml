@{
    ViewData["Title"] = "Crear presupuesto";
}

@model ViewModel.CrearPresupuestoViewModel
<div class = "row justify-content-center">
    <div class = "col-6">
        <h2 class="text-center mb-3">Crear un nuevo presupuesto</h2>
            <table class = "table align-middle">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var vm in Model.Clientes){
                        <tr>
                            <th scope="row">@vm.IdCliente</th>
                            <td>@vm.Nombre</td>
                            <td>@vm.Email</td>
                            <td>@vm.Telefono</td>
                            <td class="d-flex justify-content-evenly">
                                <form method="post">
                                <button asp-controller="Presupuestos" asp-action="Crear" asp-route-id=@vm.IdCliente class="btn btn-success">Crear</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


            @foreach(var vm in Model.Clientes){
                
                <p></p>
            }
