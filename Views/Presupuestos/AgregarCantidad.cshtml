@{
    ViewData["Title"] = "Añadir Producto a Presupuesto";
}

@model ViewModel.DetallePresupuestoViewModel
<div class = "row justify-content-center">
    <div class = "col-6">
        <h2 class="text-center mb-3">Añadir producto a presupuesto</h2>
        <form asp-controller="Presupuestos" asp-action="Agregar"> 
            <input type="hidden" asp-for=@Model.IdPresupuesto>
            <input type="hidden" asp-for=@Model.IdProducto>
            <div class="mb-3">
                <label asp-for=@Model.Cantidad class="form-label"></label>
                <input asp-for=@Model.Cantidad class="form-control" >
            </div>
            <div class = "d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Enviar</button>
            </div>
        </form>
    </div>
</div>