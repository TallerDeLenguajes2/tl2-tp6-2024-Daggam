@{
    ViewData["Title"] = "Crear producto";
}

@model TiendaNamespace.Producto
<div class = "row justify-content-center">
    <div class = "col-6">
        <h2 class="text-center mb-3">Modificar producto</h2>
        <form asp-controller="Productos" asp-action="Modificar"> 
            <input hidden asp-for="@Model.IdProducto">
            <div class="mb-3">
                <label asp-for=@Model.Descripcion class="form-label">Descripcion</label>
                <input asp-for=@Model.Descripcion class="form-control" >
            </div>
            <div class="mb-3">
                <label asp-for=@Model.Precio class="form-label">Precio</label>
                <input asp-for=@Model.Precio type="number" class="form-control">
            </div>
            <div class = "d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Enviar</button>
            </div>
        </form>
    </div>
</div>