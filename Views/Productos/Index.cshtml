@{
    ViewData["Title"] = "Listar productos";
}

@model List<TiendaNamespace.Producto>
<h2 class="text-center">Mis productos</h2>
<table class = "table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model){
            <tr>
                <th scope="row">@p.IdProducto</th>
                <td>@p.Descripcion</td>
                <td>@p.Precio</td>
                <td class="d-flex justify-content-evenly">
                    <a asp-controller="Productos" asp-action="Modificar" class="btn btn-info">Modificar</a>
                    <a asp-controller="Productos" asp-action="Eliminar" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

