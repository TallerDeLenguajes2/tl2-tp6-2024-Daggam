@{
    ViewData["Title"] = "Listar productos";
}

@model List<TiendaNamespace.Producto>
<h2 class="text-center">Mis productos</h2>
<div class="d-flex justify-content-evenly my-4">
    <a asp-controller="Productos" asp-action="Crear" class="btn btn-success">Agregar un Producto</a>
</div>
<table class = "table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model){
            <tr>
                <th scope="row">@p.IdProducto</th>
                <td>@p.Descripcion</td>
                <td>@p.Precio</td>
                <td class="d-flex justify-content-evenly">
                    <a asp-controller="Productos" asp-action="Modificar" asp-route-id = "@p.IdProducto"class="btn btn-info">Modificar</a>
                    <form method="post">
                    <button asp-controller="Productos" asp-action="Eliminar" asp-route-id = "@p.IdProducto" class="btn btn-danger" onclick=" return confirm('¿Estás seguro de que quieres eliminar este producto?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

